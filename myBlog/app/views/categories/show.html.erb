<%= render 'shared/title', title: @category.title %>
<% if @category.posts.size != 0 %>
  <div class="row">
   
    <% @category.posts.reverse.each do |post| %>
    <div class="well col-md-6">
      <h3><%= post.title%></h3>
      <p>
        <%= post.content%>
      </p>
      <p><%= post.created_at.strftime("%b %d, %Y") %></p>
      <p><%= post.comments.size %> comments </p>
    </div>
  </div>
  <% end %>
<% else %>
  <p> Oops..no post for this category :( </p>
<% end %>

